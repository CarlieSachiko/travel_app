<div class="profile">
  <div class="jumbotron text-center"><h1>Your Trips</h1>
    <div id="notice"><%= notice %> </div>
    <%= link_to 'Create New Trip', new_trip_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  %>

    <div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
      </div>
    </div>
  </div>

  <% if (current_user.trips.count > 0) %>
      <ul>
        <% current_user.trips.each do |t| %>
          <li><%= link_to t.name, trip_path(t) %></li>
        <% end %>
      </ul>

  <% else %>
      <p>You currently have no trips. Why?</p>
  <% end %>


  <h3>Create New Trip</h3>

  <%= form_for @new_trip do |f| %>
      <div>
          <%= f.label :name, nil, class: 'sr-only' %>
          <%= f.text_field :name, :placeholder => "Trip Name" %>
      </div>
      <div>
          <%= f.label :country, nil, class: 'sr-only' %>
          <%= f.text_field :country, :placeholder => "Country" %>
      </div>
      <div>
          <%= f.label :startdate, "Start Date"%><br>
          <%= f.date_field :startdate, :placeholder => "Start Date" %>
      </div>
      <div>
          <%= f.label :enddate, "End Date" %><br>
          <%= f.date_field :enddate, :placeholder => "End Date" %>
      </div>
      <%= f.submit "Save New Trip", class: "btn btn-default" %>
  <% end %>

  <%= link_to "Back", user_path(current_user) %>
</div>
