<div class="profile">
  <div class="jumbotron text-center">
    <h2>My Bucket List</h2>
    <h3><%= @sight.city.name %>, <%= @sight.city.country %></h3>
    <%= link_to "Go Back", city_path(@sight.city_id) %>
    <div id="notice"><%= notice %></div>
  </div>

<h4><%= @sight.name %></h4>
<h4>Address: <%= @sight.address %></h4>


  <%= link_to "Edit", edit_sight_path %> |
  <%= link_to "Delete", sight_path(@sight), method: :delete, data: { confirm: 'Are you sure???' } %>




</div>
