<div class="profile">
  <div class="jumbotron text-center">
    <h2>MY BUCKET LIST</h2>
    <h3><%= @activity.city.name.upcase %>, <%= @activity.city.country.upcase %></h3>
    <div id="notice"><%= notice %></div>
  </div>

  <ol class="breadcrumb">
    <li><%= link_to "Profile", user_path(current_user), class: "grey-link" %></li>
    <li><%= link_to "My Bucket List", user_cities_path(current_user), class: "grey-link" %></li>
    <li><%= link_to @activity.city.name, city_path(@activity.city), class: "grey-link" %></li>
    <li class="active"><%= @activity.name %></li>
  </ol>

  <div class="container">
    <h4><%= @activity.name %></h4>
    <h4>Notes:</h4>
    <p><%= @activity.note %><p>
    <br>
    <%= link_to "Edit", edit_activity_path, class: "blck-link" %> |
    <%= link_to "Delete", activity_path(@activity), method: :delete, data: { confirm: 'Are you sure???' }, class: "blck-link" %>
  </div>




</div>
