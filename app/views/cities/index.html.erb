<div class="profile">
  <div class="jumbotron text-center">
    <h2>MY BUCKET LIST</h2>
    <h4>add it. see it. check it off the list. increase happiness.</h4>
    <br>
    <%= form_for [@user, @city_new], :html => {:class => "new_city form-inline"} do |f| %>
      <% if @city_new.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @city_new.errorsfull_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field form-group">
        <%= label_tag :name, nil, class: 'sr-only' %>
        <%= f.text_field :name, :required => true, :placeholder => "City Name", class: "form-control"%>
      </div>
      <div class="field form-group">
        <%= label_tag :country, nil, class: 'sr-only' %>
        <%= f.text_field :country, :required => true, :placeholder => "Country", class: "form-control" %>
      </div>
      <div class="actions form-group"><%= f.submit 'Add to List', class: "form-control btn" %></div>
    <% end %>
  </div>

  <div class="progressbar text-left container-fluid">
    <div class="container">
      <span><%= link_to "Profile", user_path(current_user) %></span>
      <span class="glyphicon glyphicon-chevron-right"></span>
      <%= link_to "My Bucket List", user_cities_path(current_user) %>
    </div>
  </div>

  <div class="container">
    <% if (@user.cities.count > 0) %>
      <ul>
        <% @user.cities.each do |city| %>
          <li>
            <h3 class="blck-link">
            <%= link_to city.name, city_path(city) %>, <%= city.country %>
            <% if city.done %>
              <span class="glyphicon glyphicon-ok blck"></span>
            <% end %>
            </h3>
          </li>
        <% end %>
      </ul>

    <% else %>
        <div class="text-center">You currently don't want to go anywhere. That's sad. You should fix that.</div>
    <% end %>
  </div>



